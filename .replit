modules = ["php-8.2", "nodejs-20", "web", "bash", "php-8.3", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_supabase:1.0.0"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "php -S localhost:8080 -t . api/index.php & npx vite preview --host 0.0.0.0 --port 5000"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Backend"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "PHP Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S localhost:8080 -t . api/index.php"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37599
externalPort = 3001

[[ports]]
localPort = 41639
externalPort = 3000
