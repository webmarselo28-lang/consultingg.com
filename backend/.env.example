# =============================================================================
# ConsultingG Real Estate - Backend Environment Variables
# =============================================================================
# IMPORTANT: Copy this file to .env and update with your values
# NEVER commit .env file to version control!

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000

# Public facing URL (used for image URLs, CORS, etc.)
# Development: http://localhost:3000
# Staging: https://goro.consultingg.com
# Production: https://consultingg.com
PUBLIC_BASE_URL=https://goro.consultingg.com

# -----------------------------------------------------------------------------
# Database Configuration (MySQL 8.0)
# -----------------------------------------------------------------------------
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# Production database
DATABASE_URL="mysql://yogahonc_consultingg788:PoloSport88*@localhost:3306/yogahonc_consultingg788"

# Old database (for reference)
# DATABASE_URL="mysql://yogahonc_consultingg78:PASSWORD@localhost:3306/yogahonc_consultingg78"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate secure secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-openssl-rand-hex-32
JWT_EXPIRES_IN=7d
JWT_AUD=consultingg.com

# -----------------------------------------------------------------------------
# Upload Configuration
# -----------------------------------------------------------------------------
# Uploads directory (relative to backend root or absolute path)
# Development: ./uploads
# Production: /home/webmarselo28-lang/goro.consultingg.com/uploads
UPLOADS_DIR=./uploads

# Maximum file size in bytes (20MB = 20971520 bytes)
MAX_FILE_SIZE=20971520
UPLOAD_MAX_SIZE=20971520

# Allowed file types
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf
MAX_IMAGES_PER_PROPERTY=50

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Development: http://localhost:5173,http://localhost:3000
# Production: https://consultingg.com,https://www.consultingg.com,https://goro.consultingg.com
CORS_ORIGIN=https://goro.consultingg.com,https://consultingg.com,https://www.consultingg.com

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Log file directory
LOG_DIR=./logs

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# General API rate limit (requests per 15 minutes per IP)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Auth rate limit (login attempts per 15 minutes per IP)
AUTH_RATE_LIMIT_MAX=5

# =============================================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# =============================================================================
# [ ] Update DATABASE_URL with production credentials
# [ ] Generate new JWT_SECRET with: openssl rand -hex 32
# [ ] Set NODE_ENV=production
# [ ] Update PUBLIC_BASE_URL to production domain
# [ ] Set secure CORS_ORIGIN (remove localhost)
# [ ] Configure uploads directory with absolute path
# [ ] Set appropriate LOG_LEVEL (info or warn)
# [ ] Verify all paths are correct for hosting environment
# [ ] Test database connection
# [ ] Test file uploads
# [ ] Test API endpoints
# =============================================================================