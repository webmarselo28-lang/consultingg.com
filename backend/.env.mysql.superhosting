# =====================================================
# MySQL Configuration for SuperHosting.bg
# =====================================================
# This is the production configuration for consultingg.com
# hosted on SuperHosting.bg with MySQL database

# Database Connection Type
DB_CONNECTION=mysql

# MySQL Database Credentials (SuperHosting)
# IMPORTANT: Replace these values with your actual credentials
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# MySQL Character Set
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://consultingg.com

# JWT Authentication
JWT_SECRET=consultingg-jwt-secret-key-2024
JWT_AUD=consultingg.com

