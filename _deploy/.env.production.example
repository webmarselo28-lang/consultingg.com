# ConsultingG Real Estate - Production Environment Configuration
# Copy this file to .env in the backend/api/ directory and set actual values

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration (SuperHosting PostgreSQL)
DB_DRIVER=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=yogahonc_consultingg8
DB_USERNAME=yogahonc_consultingg88
DB_PASSWORD=<SET_IN_CPANEL>

# JWT Authentication (generate a secure random string)
JWT_SECRET=<SET_IN_CPANEL_32_CHARS_MIN>

# File Upload Configuration
UPLOAD_MAX_SIZE=20971520
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Error Logging
LOG_ERRORS=true
LOG_FILE=/tmp/consultingg-errors.log

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# Email Configuration (if needed)
# SMTP_HOST=mail.your-domain.com
# SMTP_PORT=587
# SMTP_USERNAME=noreply@your-domain.com
# SMTP_PASSWORD=<SET_IN_CPANEL>
# SMTP_FROM_NAME="ConsultingG Real Estate"

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Security Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With