# ConsultingG Real Estate - Production .htaccess
# SPA Routing and Security Configuration

# Security Headers
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set X-XSS-Protection "1; mode=block"
Header always set Strict-Transport-Security "max-age=31536000; includeSubdomains"
Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Content Security Policy
Header always set Content-Security-Policy "default-src 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:;"

# Disable server signature
ServerSignature Off

# Prevent access to sensitive files
<Files ~ "^(\.env|\.env\.*|composer\.json|composer\.lock|package\.json|package-lock\.json|\.git.*|\.htaccess)$">
    Order allow,deny
    Deny from all
</Files>

# Prevent access to vendor and node_modules
RedirectMatch 404 /vendor/.*
RedirectMatch 404 /node_modules/.*

# Cache static assets (1 year)
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 year"
    Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Cache HTML files (1 hour)
<FilesMatch "\.html$">
    ExpiresActive On
    ExpiresDefault "access plus 1 hour"
    Header set Cache-Control "public, max-age=3600"
</FilesMatch>

# GZIP compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Rewrite engine
RewriteEngine On

# API routing - redirect /api/* to /backend/api/
RewriteCond %{REQUEST_URI} ^/api/(.*)$
RewriteRule ^api/(.*)$ /backend/api/index.php [QSA,L]

# Handle Angular/React/Vue SPA routing
# Skip files and directories that exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Skip API requests (already handled above)
RewriteCond %{REQUEST_URI} !^/backend/

# Skip upload directory
RewriteCond %{REQUEST_URI} !^/uploads/

# Route everything else to index.html
RewriteRule ^(.*)$ /index.html [QSA,L]

