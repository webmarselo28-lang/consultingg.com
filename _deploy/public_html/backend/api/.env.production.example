# ConsultingG Real Estate - Production Environment Configuration
# Copy this file to .env and update the values below

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://consultingg.com

# Database Configuration (SuperHosting PostgreSQL)
DB_DRIVER=pgsql
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=yogahonc_consultingg8
DB_USERNAME=yogahonc_consultingg88
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# Alternative database configuration format
DB_NAME=yogahonc_consultingg8
DB_USER=yogahonc_consultingg88
DB_PASS=YOUR_DATABASE_PASSWORD_HERE
DATABASE_URL=postgresql://yogahonc_consultingg88:YOUR_PASSWORD_HERE@localhost:5432/yogahonc_consultingg8

# JWT Configuration - Generate a secure 64-character secret
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_HERE_64_CHARACTERS_MINIMUM
JWT_AUD=consultingg.com

# File Upload Settings
UPLOAD_MAX_SIZE=20971520
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Logging Configuration
LOG_ERRORS=true
LOG_FILE=/tmp/consultingg-errors.log

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://consultingg.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With